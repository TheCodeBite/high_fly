<?php
	namespace App\Http\Controllers;

	use App\Http\Controller\Controller;

	class UsuarioController Extends Controllers{
		function registroUsuario(){
			$nombre = $_POST['nombre'];
			$contrasenia = $_POST['contrasenia'];
													//vamos a la carpeta config/ database //database-username-password --> de igual manera en .env por lineas 9-14 DB_Database = 
			try{
				$id = \DB::table('usuarios')->insertGetId(
					[
						'root' => $nombre,
						'' => md5($contrasenia)
					]
				);

				return \Redirect::to(\prueba)->with('mensaje', $nombre);

			}catch(\Exception $e){

				return \Redirect::to(\prueba)->with('mensaje', $e);
			}

		}

	}